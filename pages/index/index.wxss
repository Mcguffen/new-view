.header{
  width: 750rpx;
  height: 90rpx;
  /* border: 1px solid red; */
}
.hdCon{
  display: flex;
  justify-content: space-between;
  align-items:center;
  height: 100%;
}
.hdCon navigator{
  height: 50rpx;
}
.hdCon image{
  height: 100%;
}
.xiaoxi{
  position: relative;
  animation: dh 1s linear infinite alternate;

}
.xiaoxi button{
  position: absolute;
  width: 100%;
  height: 100%;
  /* border: 1px solid black; */
  top: 0;
  left: 0;
  opacity: 0;
}

.banner{
  width: 100%;
  height: 295rpx;
  /* border: 1px solid green; */
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 295rpx;
}

